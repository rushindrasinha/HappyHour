<div class="jumbotron">
  <h2> Edit Your Offer </h2>

  <%= form_for @offer do |f|  %>
    <div class="form-group">
      <%= f.label :item %>
      <%= f.text_field :item, class: "form-control" %>
    </div>
      <br>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, class: "form-control" %>
    </div>
      <br>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
      <br>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.text_field :image, class: "form-control" %>
    </div>
      <br>
      <%= f.submit "Update Offer", class: "btn btn-default" %>
  <% end %>
</div>


