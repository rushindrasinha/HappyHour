

<div class="jumbotron">
    <h2>Happy Hour</h2>
    <p>Anytime + Anywhere ... Find you the best Happy Hour Deals around you</p>
</div>
    <% if logged_in? %>
    <h2>List of Bars</h2>
       <ul>
        <% @bars.each do |bar| %>
          <div class="barlist">
        <p><strong>Bar Name : <%= bar.bar_name %></strong></p>
        <p><strong>Photos : <%= bar.image %></strong></p>
        <p><strong>Bar Location : <%= bar.location %></strong></p>
        <p><strong>Zip Code : <%= bar.zip %></strong></p>
        <p><strong>Day of the week : <%= bar.day %></strong></p>
        <p><strong>Happy Hour Timings : <%= bar.time %></strong></p>
        <p><strong>Bar Description : <%= bar.description %></strong></p>
          </div>
        <% end %>
      </ul>
    <% else %>
    <p> Welcome to Happy Hours </p>
    <% end %>