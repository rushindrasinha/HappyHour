<div class='jumbotron'
  <section>
    <h1><%= @user.name %></h1>
  </section>

  <section>
    <h2>Bars</h2>

    <% @user.bars.each do |bar| %>
      <div class="barlist">
        <p><strong>Bar Name : <%= bar.bar_name %></strong></p>
        <p><strong>Bar Location : <%= bar.location %></strong></p>
        <p><strong>Zip Code : <%= bar.zip %></strong></p>
        <p><strong>Day of the week : <%= bar.day %></strong></p>
        <span class='edbutton'><%= link_to "Edit Bar", edit_bar_path(bar), class: "btn btn-primary" %></span>
        <span class='edbutton'><%= link_to "Delete Bar", delete_bar_path(bar), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></span>
      </div>
    <% end %>
  </section>
</div>