<div class="jumbotron">
  <h1>Sign Up!!</h1>

  <%= form_for @user do |f|  %>
    
      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <br>
      <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <br>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <br>
      <%= f.submit "Sign up!" %>
      <br>
  <% end %>
  
</div>